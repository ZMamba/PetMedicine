@model Animal_Medicine.ViewModels.EditDiseaseViewModel

<h4>
    Редактировать
</h4>
<form asp-action="Edit" asp-route-id="@Model.Id">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PetTypeId" class="control-label"></label>
        <select asp-for="PetTypeId" asp-items="@(new SelectList(Model.PetTypes, "Id", "Title"))"></select>
        <span asp-validation-for="PetTypeId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Редактировать" class="btn btn-info" />
    </div>
</form>

<div>
    <a asp-action="Index" class="alert-warning">К списку</a>
</div>

